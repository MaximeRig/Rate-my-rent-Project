{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="card p-4" style="max-width: 25rem; margin: 0 auto">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="m-3">
        <label for="username">{{ 'Pseudonyme'|trans }}</label>
        <input class="card" style="width: 18rem;" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>
    <div class="m-3">
        <label for="password">{{ 'Mot de passe'|trans }}</label>
        <input class="card" style="width: 18rem;" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>
    <div class="remember">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label  for="remember_me">{{ 'Se souvenir de moi'|trans }}</label>
    </div>

    <input class="btn" type="submit" id="_submit" name="_submit" value="{{ 'Connexion'|trans }}" />
</form>
