{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <h2>Les avis</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.title }}</td>
                <td>
                    
                    <a href="{{ path('admin_review_show', {'id': review.id}) }}">show</a>
                    
                </td>
                <td>
                        {{ include('admin/review/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('admin_review_new') }}">Create new</a> #}
{% endblock %}
