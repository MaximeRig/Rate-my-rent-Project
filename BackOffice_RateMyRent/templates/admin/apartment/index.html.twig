{% extends 'base.html.twig' %}

{% block title %}Appartements{% endblock %}

{% block body %}
    <h1>Les appartements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for apartment in apartments %}
            <tr>
                <td>{{ apartment.id }}</td><hr>
                <td>{{ apartment.adress }}</td>
                <td>
                    
                     <a href="{{ path('admin_apartment_show', {'id': apartment.id}) }}">show</a>
                    
                </td>
                <td>
                    {{ include('admin/apartment/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('admin_apartment_new') }}">Create new</a> #}
{% endblock %}
