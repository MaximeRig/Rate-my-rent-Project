{% extends 'base.html.twig' %}

{% block title %}Appartements{% endblock %}

{% block body %}
    <h2 class="my-5">Les appartements</h2>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Id</th>
                <th>Name</th>
                <th class="text-center">Voir</th>
                <th class="text-center">Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for apartment in apartments %}
            <tr>
                <td class="text-center">{{ apartment.id }}</td>
                <td>{{ apartment.address }}</td>
                <td class="text-center">                    
                    <button class="btn"> 
                        <a href="{{ path('admin_apartment_show', {'id': apartment.id}) }}" class="">Voir</a>
                    </button>                    
                </td>
                <td class="text-center">
                    {{ include('admin/apartment/_delete_form.html.twig') }}
                </td>
            
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<hr>
    <h3 class="my-5">
       <a href="{{ path('admin_home')}}"> Revenir Ã  l'accueil</a>
    </h3>
{% endblock %}
